<resources>

    <!-- Base application theme. -->
    <style name="kotlin_AppTheme" parent="android:Theme.Light.NoTitleBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- materialDialog 的主题只能全局设置，不能只对单一dilog生效 -->
    <style name="kotlin_MaterialDialogCustomTheme">
        <item name="md_corner_radius">16dp</item>
        <item name="md_color_title">#ff90ff</item>
        <item name="md_color_content">#fa23ab</item>
        <item name="md_color_button_text">#23fc23</item>
    </style>

</resources>
